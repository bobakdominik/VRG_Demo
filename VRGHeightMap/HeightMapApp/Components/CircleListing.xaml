<UserControl x:Class="HeightMapApp.Components.CircleListing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeightMapApp.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" Margin="2" Width="150">
            <TextBlock Text="Circle 1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
        </Border>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="2" Width="150">
            <TextBlock Text="Circle 2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
        </Border>
        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Margin="2" Width="150">
            <TextBlock Text="Circle 3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
        </Border>
    </Grid>
</UserControl>
