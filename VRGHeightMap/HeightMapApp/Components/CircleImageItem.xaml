<UserControl x:Class="HeightMapApp.Components.CircleImageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeightMapApp.Components"
             xmlns:viewmodels="clr-namespace:HeightMapApp.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:CircleImageItemViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="2" BorderBrush="Orange">
        <Canvas>
            <Line 
    X1="2.5"
    Y1="-2.5"
    X2="7.5"
    Y2="2.5"
    Stroke="Red"
    StrokeThickness="3"/>
            <Line 
X1="7.5"
Y1="0"
X2="10"
Y2="2.5"
Stroke="Blue"
StrokeThickness="1"/>
            <!-- Circle -->
            <Ellipse
            Width="{Binding CircleDiameter, PresentationTraceSources.TraceLevel=High}"
            Height="{Binding CircleDiameter, PresentationTraceSources.TraceLevel=High}"
            Fill="Transparent"
            Stroke="{Binding CircleColor, PresentationTraceSources.TraceLevel=High}"
            StrokeThickness="{Binding Thickness, PresentationTraceSources.TraceLevel=High}"
            Canvas.Left="{Binding CircleX, PresentationTraceSources.TraceLevel=High}"
            Canvas.Top="{Binding CircleY, PresentationTraceSources.TraceLevel=High}" />

            <!-- Center Point-->
            <Line 
            X1="{Binding CenterCrossX1}"
            Y1="{Binding CenterCrossY1}"
            X2="{Binding CenterCrossX2}"
            Y2="{Binding CenterCrossY2}"
            Stroke="{Binding CircleColor}"
            StrokeThickness="1"/>
            <Line
            X1="{Binding CenterCrossX2}"
            Y1="{Binding CenterCrossY1}"
            X2="{Binding CenterCrossX1}"
            Y2="{Binding CenterCrossY2}"
            Stroke="{Binding CircleColor}"
            StrokeThickness="1"/>

            <!-- Outline Point -->
            <Line 
            X1="{Binding OutlineCrossX1}"
            Y1="{Binding OutlineCrossY1}"
            X2="{Binding OutlineCrossX2}"
            Y2="{Binding OutlineCrossY2}"
            Stroke="{Binding CircleColor}"
            StrokeThickness="1"/>
            <Line
            X1="{Binding OutlineCrossX2}"
            Y1="{Binding OutlineCrossY1}"
            X2="{Binding OutlineCrossX1}"
            Y2="{Binding OutlineCrossY2}"
            Stroke="{Binding CircleColor}"
            StrokeThickness="1"/>
        </Canvas>
    </Border>
