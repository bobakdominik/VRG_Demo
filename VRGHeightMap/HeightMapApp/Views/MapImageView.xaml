<UserControl x:Class="HeightMapApp.Views.MapImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeightMapApp.Views"
             xmlns:viewmodels="clr-namespace:HeightMapApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:MapImageViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave" MouseMove="OnMouseMove" Source="D://Development//c#//VRG_Demo//test.png" Stretch="Uniform" MaxHeight="800" MaxWidth="800"/>
        </ScrollViewer>
        <TextBlock Grid.Row="1" Text="{Binding CursorLocationText}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10"/>
    </Grid>
</UserControl>
